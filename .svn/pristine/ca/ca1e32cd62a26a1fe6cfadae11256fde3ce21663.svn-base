li {
  list-style: none;
}
ul,
h2,
h3,
h5 {
  margin: 0px;
  padding: 0px;
}
textarea,
input {
  outline: none;
  color: #999;
}
a.a-blue {
  color: #4865ea;
}
.public-container {
  margin: 20px;
  height: calc(100vh - 78px);
  background: #fff;
  padding: 20px;
  overflow: auto;
}
.foot {
  width: 100%;
  height: 376px;
  background: #3654D1;
  text-align: center;
  line-height: 26px;
  color:#FFFFFF;
  font-size: 12px;
  padding-bottom: 22px;
  .foot-box{
    clear: both;
    width: 1180px;
    color:rgba(255,255,255,0.5);
    margin: 0px auto 0px auto;

  }

  .content {
    clear: both;
    width: 900px;
    margin: 0px auto 64px auto;
    padding-top: 101px;
    height: 270px;
    display: block;
    .left {
      width: 49%;
      float: left;
      text-align: left; height: 150px; border-right: 1px solid #666;
      padding-left: 180px;
      .contact{
        background: url(./../assets/index/icon-2.png) -0px -600px;
        width: 50px;
        height: 28px; display: block;

      }
      .info{
        margin-top: 10px;
      }
    }

    .right {
      width: 49%;
      float: left; text-align: left; padding-left: 100px;
      .info{ margin-top: 30px;}
      .link {
        height: 50px;
        margin-top: 20px;

        .a1 {
          background: url(./../assets/index/icon-1.png) -39px -7px;
          width: 28px;
          height: 28px;
          display: block;
          float: left;
          margin-right: 18px;
        }
        .a1:hover {
          background-position: -39px -47px;
        }
        .a2 {
          background: url(./../assets/index/icon-1.png) -75px -7px;
          width: 28px;
          height: 28px;
          display: block;
          float: left;
          margin-right: 18px;
        }
        .a2:hover {
          background-position: -75px -47px;
        }
        .a3 {
          background: url(./../assets/index/icon-1.png) -111px -7px;
          width: 28px;
          height: 28px;
          display: block;
          float: left;
        }
        .a3:hover {
          background-position: -111px -47px;
        }
      }
    }

  }
}

